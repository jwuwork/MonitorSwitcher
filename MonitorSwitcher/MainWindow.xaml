<Window x:Class="MonitorSwitcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        Title="Monitor Switcher" Height="185" Width="265" ResizeMode="NoResize" Icon="Monitor.ico" ShowInTaskbar="False">
    
    <Window.Background>
        <LinearGradientBrush EndPoint="0.331,-0.098" StartPoint="0.873,1.538" SpreadMethod="Pad">
            <GradientStop Color="#FFFFFFFF" Offset="1"/>
            <GradientStop Color="#FF7EAAD4" Offset="0"/>
        </LinearGradientBrush>
    </Window.Background>
    
    <Grid>
        <Rectangle Fill="#FF293C4E" Stroke="{x:Null}" RadiusX="5" RadiusY="5" Margin="8,0,8,8" x:Name="rectTextBackground" VerticalAlignment="Bottom" Height="35"/>
        <Label Content="Move mouse to turn monitor back on." Margin="25,0,7,8" VerticalAlignment="Bottom" Height="31" Foreground="#FFFFFFFF"/>
        <Button HorizontalAlignment="Stretch" Margin="51,51,51,0" x:Name="btnTurnMonitorOff" VerticalAlignment="Top" Height="28" Content="Turn Monitor Off" Click="MonitorOff"/>
        <Image HorizontalAlignment="Left" Margin="12,0,0,17" VerticalAlignment="Bottom" Width="16" Height="16" Source="information.png" Stretch="Fill"/>
    </Grid>
</Window>
